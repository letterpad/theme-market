{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "downlevelIteration": true,
    "allowJs": true,
    // "lib": ["es2017", "dom"],
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "pretty": true,
    "outDir": "dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/typings"]
}
